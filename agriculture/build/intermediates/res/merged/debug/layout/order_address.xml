<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="收货人姓名:"
        android:textColor="#FF8247"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/order_address_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:hint="收货人姓名:"
        android:textSize="20sp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="收货地址："
        android:textColor="#FF8247"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/order_address_item_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:hint="收货地址："
        android:textSize="20sp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="联系方式："
        android:textColor="#FF8247"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/order_address_item_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:hint="联系方式："
        android:textSize="20sp" />

    <Button
        android:id="@+id/order_address_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="@drawable/product_easy_shopping_normal"
        android:text="确定"
        android:layout_marginRight="10dp" />

</LinearLayout>