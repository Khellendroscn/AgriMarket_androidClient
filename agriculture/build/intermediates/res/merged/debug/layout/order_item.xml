<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/order_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#00A600"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/order_item_peice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_item_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#00A600"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/order_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_item_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/order_item_peice"
        android:textColor="#00A600"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/order_item_farm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_item_peice"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#00A600"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/order_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/order_item_farm"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#EA0000"
        android:textSize="18sp" />

</RelativeLayout>