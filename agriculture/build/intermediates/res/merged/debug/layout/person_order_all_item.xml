<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/person_order_all_farm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_bg"
        android:gravity="center_vertical"
        android:textColor="#4F4F4F"
        android:textSize="18sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/person_order_all_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/person_order_all_farm"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
         />

    <TextView
        android:id="@+id/person_order_all_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_order_all_farm"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/person_order_all_image"
        android:textColor="#00A600"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/person_order_all_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_order_all_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/person_order_all_image"
        android:textColor="#00A600"
        android:textSize="18sp" />

     <TextView
        android:id="@+id/person_order_all_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_order_all_count"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/person_order_all_image"
        android:textColor="#00A600"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/person_order_all_money"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/person_order_all_count"
        android:gravity="center"
        android:background="@drawable/product_easy_shopping_selected"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#FFF5EE"
        android:textSize="18sp" 
       />

</RelativeLayout>