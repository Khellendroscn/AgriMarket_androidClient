<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/shopping_card_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C5C1AA"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shopping_cart_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textColor="#FFF5EE"
            android:textSize="18sp" />

        <Button
            android:id="@+id/shopping_cart_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shopping_cart_go_bug"
            android:text="  继续购物  "
            android:visibility="invisible"
            android:textColor="#FFF5EE"
            android:textSize="20sp" />

        <Button
            android:id="@+id/shopping_cart_go_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shopping_cart_go_bug"
            android:text="去结算"
            android:textColor="#FFF5EE"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>